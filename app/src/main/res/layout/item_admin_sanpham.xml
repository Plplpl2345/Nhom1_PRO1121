<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/custom"
        android:padding="12dp"
        android:gravity="center"
        android:elevation="4dp"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/laptop_mau"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_tensp_home_ql"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên Sản Phẩm"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/txt_giasp_home_ql"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá Sản Phẩm"
                android:textColor="#D32F2F"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/txt_xemthem_home_ql"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xemthem"
                android:textSize="14sp"
                android:textColor="#1976D2"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="12dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_deletesp_ql"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:backgroundTint="#D32F2F"
                android:text="DELETE"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_updatesp_ql"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:backgroundTint="#1976D2"
                android:text="UPDATE"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>